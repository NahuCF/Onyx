{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "linux-debug",
            "inherits": "base",
            "displayName": "Linux Debug",
            "description": "Debug build for Linux",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_C_COMPILER": "gcc"
            }
        },
        {
            "name": "linux-release",
            "inherits": "base",
            "displayName": "Linux Release",
            "description": "Release build for Linux",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_C_COMPILER": "gcc"
            }
        },
        {
            "name": "windows-debug",
            "inherits": "base",
            "displayName": "Windows Debug (MSVC)",
            "description": "Debug build for Windows using MSVC",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows-release",
            "inherits": "base",
            "displayName": "Windows Release (MSVC)",
            "description": "Release build for Windows using MSVC",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "unix-makefiles-debug",
            "displayName": "Unix Makefiles Debug",
            "description": "Debug build using Unix Makefiles",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "unix-makefiles-release",
            "displayName": "Unix Makefiles Release",
            "description": "Release build using Unix Makefiles",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "linux-profile",
            "displayName": "Linux Profile (Valgrind/Callgrind)",
            "description": "Profiling build with optimizations and debug symbols",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/profile",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_FLAGS": "-g -O2 -fno-omit-frame-pointer",
                "CMAKE_C_FLAGS": "-g -O2 -fno-omit-frame-pointer",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux-debug",
            "configurePreset": "linux-debug",
            "displayName": "Linux Debug",
            "description": "Build Linux Debug"
        },
        {
            "name": "linux-release",
            "configurePreset": "linux-release",
            "displayName": "Linux Release",
            "description": "Build Linux Release"
        },
        {
            "name": "windows-debug",
            "configurePreset": "windows-debug",
            "displayName": "Windows Debug",
            "description": "Build Windows Debug",
            "configuration": "Debug"
        },
        {
            "name": "windows-release",
            "configurePreset": "windows-release",
            "displayName": "Windows Release",
            "description": "Build Windows Release",
            "configuration": "Release"
        },
        {
            "name": "unix-makefiles-debug",
            "configurePreset": "unix-makefiles-debug",
            "displayName": "Unix Makefiles Debug"
        },
        {
            "name": "unix-makefiles-release",
            "configurePreset": "unix-makefiles-release",
            "displayName": "Unix Makefiles Release"
        },
        {
            "name": "linux-profile",
            "configurePreset": "linux-profile",
            "displayName": "Linux Profile",
            "description": "Build for Valgrind/Callgrind profiling"
        }
    ]
}